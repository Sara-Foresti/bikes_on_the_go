<h1>Bikes</h1>
  <div class="container">
    <div class="row">
      <% @bikes.each do |bike| %>
        <div class="col-xs-12 col-sm-4">
          <div class= "card" style= "background-image:linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(69,68,68,0.8) 100%), url(<%= image_path "bike.jpg" %>)">
           <div class= "card_content">
            <%= link_to bike.name, bike_path(bike) %>
          </div>
        </div>
      </div>
    <% end %>
