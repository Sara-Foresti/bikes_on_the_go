<div class="bike-header"><h1>Bikes</h1></div>
<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-xs-12 col-sm-4">
        <% bike_photo =  bike.photo? ? bike.photo : "https://images.unsplash.com/photo-1496150590317-f8d952453f93?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=961edb326df737a36e5eafcae013b5fe&auto=format&fit=crop&w=1350&q=80" %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path bike_photo, quality: "auto" %>');">
         <div class= "card_content">
          <%= link_to bike.name, bike_path(bike) %>
         </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
